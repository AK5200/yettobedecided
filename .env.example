# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Email (Resend)
RESEND_API_KEY=re_your_api_key
RESEND_FROM_EMAIL=FeedbackHub <noreply@yourdomain.com>
EMAIL_FROM=FeedbackHub <noreply@yourdomain.com>

# Google OAuth (dashboard login + widget)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth (widget)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Slack integration
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret

# Linear integration
LINEAR_CLIENT_ID=your-linear-client-id
LINEAR_CLIENT_SECRET=your-linear-client-secret

# Widget magic link / JWT SSO
# Generate with: openssl rand -hex 32
WIDGET_JWT_SECRET=your-random-secret-min-32-chars

# CORS — comma-separated list of allowed origins for widget API routes
# Example: https://yourapp.com,https://staging.yourapp.com
ALLOWED_ORIGINS=https://yourdomain.com

# Optional — used as fallback base URL (code derives from request headers when possible)
NEXT_PUBLIC_APP_URL=https://yourdomain.com
